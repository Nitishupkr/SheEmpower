<script>
  let prevScrollPos = window.pageYOffset;
  const navbar = document.querySelector(".navbar");
  const navbarOffsetTop = navbar.offsetTop;
  const scrollThreshold = 100; // Adjust the scroll distance threshold as needed

  window.onscroll = function() {
    const currentScrollPos = window.pageYOffset;
    const scrollDistance = Math.abs(currentScrollPos - navbarOffsetTop);

    if (prevScrollPos > currentScrollPos) {
      navbar.style.top = "0";
    } else if (scrollDistance >= scrollThreshold) {
      navbar.style.top = "-98px";
    }

    prevScrollPos = currentScrollPos;

    // Show navbar when scrolling back near its position
    if (currentScrollPos <= navbarOffsetTop + scrollThreshold) {
      navbar.style.top = "0";
    }
  };
</script>
